%table{class: "table table-striped table-condensed"}
  %thead
    %tr
      - @table_columns.each do |tc|
        %th= @controller.get_heading(tc)

  %tbody
    - @table_objects.each do |obj|
      %tr
        
        - @table_columns.each do |tc|
          %td= obj.send(tc)
        
        %td= link_to 'Show', obj, class: "btn btn-mini btn-info"
        %td= link_to 'Edit', edit_polymorphic_path(obj), class: "btn btn-mini btn-info"
        %td= link_to 'Destroy', obj, confirm: 'Delete this entry?  Are you sure?', method: :delete, class: "btn btn-mini btn-danger"
