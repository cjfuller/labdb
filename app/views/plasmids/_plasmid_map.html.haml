%a.btn.btn-mini.btn-primary{href: "#plasmidmap-modal", id: "show-map-button", role: "button", "data-toggle" => "modal"} Show Plasmid Map
.modal.hide.fade#plasmidmap-modal
  .modal-header
    %button{type: "button", class: "close", "data-dismiss" => "modal"}= "&times;".html_safe
    %h4
      = "Mapping #{@obj.named_number_string}"
  .modal-body
    #plasmid-map{data: @obj.map}
  .modal-footer
    .form-horizontal
      %input{type: "text", id: "enzyme", class: "span2"}
      %button{class: "btn btn-mini", id: "show_enzyme"} Show enzyme
      %button{class: "btn btn-mini btn-inverse", id: "hide_enzyme"} Hide enzyme
