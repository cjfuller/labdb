#!/usr/bin/env ruby
# This command will automatically be run when you run "rails" with Rails 3 gems installed from the root of your application.

require 'rails/commands/server'
require 'rack'

require 'webrick'

require 'webrick/https'

module Rails

	class Server < ::Rack::Server

		def default_options

			super.merge(Port: 3000,
									SSLEnable:true,
									SSLVerifyClient: OpenSSL::SSL::VERIFY_NONE, #only verification we really need is of the openid provider, which is handled in the openid initializer
                  SSLPrivateKey: OpenSSL::PKey::RSA.new(File.open(File.expand_path('--insert private key path here--', ".")).read),
                  SSLCertificate: OpenSSL::X509::Certificate.new(File.open(File.expand_path('--insert certificate path here--', ".")).read),
                 	SSLCertName:[["CN", WEBrick::Utils::getservername]])
		end

	end

end



APP_PATH = File.expand_path('../../config/application',  __FILE__)
require File.expand_path('../../config/boot',  __FILE__)
require 'rails/commands'
