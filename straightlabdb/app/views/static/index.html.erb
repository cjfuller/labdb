<div class="container hero-unit">

  <%  unless @logged_in then %>
      Log in with Google:
      <%=  link_to 'Login', '/login', class: "btn btn-success" %>
  <% else %>
      <% user = User.find_by_uid(session[:user_id]) %>
      <div class="row-fluid">
        <div class="span6">
          <%= "Logged in as: #{user.name} <#{user.email}>" %>
        </div>
        <div class="span3">
          <%= link_to 'Log out', '/logout', class: 'btn btn-primary' %>
        </div>
      </div>
  <%  end %>

</div>