<div class="container hero-unit">

  <%=  render :partial => "shared/subnavbar" %>

	<div class="row-fluid">

		
		<% keys = [:plasmidnumber] %> 
		<%= f.span_series([2], [:plasmidnumber], PlasmidsController.headings_for(keys), {:plasmidnumber => true}, readonly_for(keys), {})%>
		
		<div class="span6">
		</div>


<!-- buttons were here -->
		
	</div>
	
	<% keys = [:enteredby, :notebook, :verified, :date_entered] %> 
    <%= f.row([3,3,3,3], keys, PlasmidsController.headings_for(keys), {}, readonly_for(keys), {:verified => true} ) %>
	
	<% keys = [:plasmidalias, :vector, :strainnumbers] %> 
    <%= f.row([6,3,3], keys, PlasmidsController.headings_for(keys), {:plasmidalias=>true}, readonly_for(keys), {} ) %>
	

	
	
	<div class="row-fluid">
		<div class="span6">
			<div class="control-group">
								
				<label class="label control-label" for="inlineCheckboxes">
					<%=h PlasmidsController.get_heading(:antibiotic) %>
				</label>
				<div class="controls">
					<% Plasmid.get_antibiotics.each_key do |k| %>
						<label class="checkbox inline">
							<%= Plasmid.get_antibiotics[k] %>
						</label>
						<%=	f.check_box(Plasmid.get_antibiotics[k].to_sym, :disabled=>readonly?) %>
					<% end %>
				</div>
			</div>
		</div>
		
		<% keys = [:concentration, :plasmidsize] %> 
	    <%= f.span_series([3,3], keys, PlasmidsController.headings_for(keys), {}, {concentration: readonly?, plasmidsize: true}, {} ) %>
		
		
	</div>
	
	<div class="row-fluid" id="description-row">
		<div class="span12">
			<div class="control-group">
				
				<%= f.label(:description, PlasmidsController.get_heading(:description), :class=> "label control-label label-info") %>

				<div class="controls">
					<%= f.text_area(:description, :readonly=>readonly?, :rows=>12, :class=>"input-xxlarge")%>
				</div>
			</div>
		</div>
	</div>
	<div class="row-fluid" id="sequence-row">
		<div class="span12">
			<div class="control-group">
				
				<%= f.label(:sequence, PlasmidsController.get_heading(:sequence), :class=> "label control-label label-info") %>
				
				<div class="controls">
					<%= f.text_area(:sequence, :readonly=>readonly?, :rows=>4, :class=>"input-xxlarge")%>
				</div>
			</div>
		</div>
	</div>

  <%= render partial:'map_display', locals: {:f => f}  %>


  <%= render :partial=>'bottom_buttons' %>


</div>

	