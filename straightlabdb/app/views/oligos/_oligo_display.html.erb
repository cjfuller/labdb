<div class="container hero-unit">

  <%=  render :partial => "shared/subnavbar" %>

  <% keys = [:oligo_number, :oligoalias, :date_entered ] %>
  <%= f.row([3,6,3], keys, OligosController.headings_for(keys), {}, readonly_for(keys), {}) %>


  <% keys = [:entered_by, :notebook, :vendor, :organism] %>
  <%= f.row([3,3,3,3], keys, OligosController.headings_for(keys), {}, readonly_for(keys), {} ) %>


  <div class="row-fluid" id="description-row">
    <div class="span12">
      <div class="control-group">

        <%= f.label(:purpose, OligosController.get_heading(:purpose), :class=> "label control-label label-info") %>

        <div class="controls">
          <%= f.text_area(:purpose, :readonly=>readonly?, :rows=>12, :class=>"input-xxlarge")%>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid" id="sequence-row">
    <div class="span12">
      <div class="control-group">

        <%= f.label(:sequence, OligosController.get_heading(:sequence), :class=> "label control-label label-info") %>

        <div class="controls">
          <%= f.text_area(:sequence, :readonly=>readonly?, :rows=>4, :class=>"input-xxlarge")%>
        </div>
      </div>
    </div>
  </div>

  <%= render :partial=>'shared/bottom_buttons' %>


</div>

